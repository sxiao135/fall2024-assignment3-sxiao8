@model fall2024_assignment3_sixao8.Models.ActorDetail

@{
    ViewData["Title"] = "Details";
    var generatedHtml = ViewBag.GeneratedHtml as string;
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.IMDBlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.IMDBlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.ProfilePic)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Actor.ProfilePic != null)
            {
                var base64 = Convert.ToBase64String(Model.Actor.ProfilePic);
                var imgSrc = string.Format("data:image/png;base64,{0}", base64);
                <img src="@imgSrc" height="100" />
               
            }
        </dd>
    </dl>
    <div id="movie-list">
        <h2>Stars In</h2>
        @foreach (var item in Model.Movies)
        {
            <h3>@item.Title</h3>
            <div>
                @if (item.Media != null)
                {
                    var base64 = Convert.ToBase64String(item.Media);
                    var imgSrc = string.Format("data:image/png;base64,{0}", base64);
                    <img src="@imgSrc" height="100" />

                }
            </div>
            <p>@item.releaseYear</p>
        }
    </div>

    <div class="tweets">
        <h2>Recent Tweets</h2>
        <div id="tweets"> @Html.Raw(generatedHtml)</div>
        <div id="tweet-sentiment"> Tweet Sentiment: @Html.DisplayFor(model => model.Actor.TweetSentiment)</div>
    </div>
    <hr />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actor.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
